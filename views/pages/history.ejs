<!DOCTYPE html>
<html data-ng-app="history">
<head>
  <% include ../partials/header.ejs %>  
  <script type="text/javascript" src="/scripts/history.js"></script>
</head>

<body>

  <% include ../partials/nav.ejs %>

<div class="jumbotron text-center">
  <div class="container">
    <a href="/" class="lang-logo">
      <img src="http://www.naturaworld.com/wp-content/uploads/product_images/pillows/cloud-pillow.png" style="height:50px;">
    </a>
    <h1>History</h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6" data-ng-controller="latestTripsCtrl">
      <h3><span class="glyphicon glyphicon-pushpin"></span> Latest trips</h3>
      <ul>
        <li data-ng-repeat="t in trips"><a data-ng-href="/history/{{t.objectId}}">From {{t.From}} to {{t.To}} playing {{t.Songs.length}} songs.</a></li>
      </ul>
    </div>
    <div class="col-md-6">
      <h3><span class="glyphicon glyphicon-object-align-bottom"></span> Statistics</h3>
      <ul>

      </ul>
    </div>
  </div> <!-- row -->
</div>


</body>
</html>
